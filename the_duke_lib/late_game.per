#load-if-not-defined MEDIUM-MAP
#load-if-not-defined NORMAL-MAP

;On large, huge (and ludikris anyway) maps, stop TSA after 90min
;as for the farther away opponents, TSA will likely not reach them.
(defrule
	(game-time > 5400)
=>
	(set-goal CAN-USE-TOWN-SIZE-ATTACK NO)
    (set-strategic-number sn-number-attack-groups 20)
	(set-strategic-number sn-group-form-distance 40)
	(set-strategic-number sn-attack-group-gather-spacing 9)
	(set-strategic-number sn-percent-attack-soldiers 90)
	(set-strategic-number sn-percent-attack-boats 90)
	(set-strategic-number sn-task-ungrouped-soldiers NO)
	(chat-local-to-self "Stop using TSA")
	(disable-self)
)
#end-if
#end-if
#end-if
#end-if

(defrule
 	(game-time > 2700)
=>
	(set-strategic-number sn-maximum-food-drop-distance 30)
 	(set-strategic-number sn-maximum-hunt-drop-distance 12)
 	(set-strategic-number sn-maximum-gold-drop-distance 50) ;get gold and stone for which we failed to build am ining camp
 	(set-strategic-number sn-maximum-stone-drop-distance 50)
 	(set-strategic-number sn-maximum-fish-boat-drop-distance 30)
	(disable-self)
)

(defrule
	(game-time > 5400)
=>
	(set-strategic-number sn-camp-max-distance 200)
    (set-strategic-number sn-lumber-camp-max-distance 200)
    (set-strategic-number sn-cap-civilian-explorers 2)
	(set-strategic-number sn-total-number-explorers 3) ;Start exploring the map again to keep informed about the enemy, where it is and what they are building
	(set-strategic-number sn-number-explore-groups 3)
	(disable-self)
)
