	(disable-self)
)

(defrule
	(true)
=>
	(set-goal PRIMARY-COMBAT-UNIT NO)
	(set-goal PRIMARY-COMBAT-UNIT2 NO)
	(set-goal SECONDARY-COMBAT-UNIT NO)
	(set-goal SECONDARY-COMBAT-UNIT2 NO)

