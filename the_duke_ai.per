	(set-goal PRIMARY-COMBAT-SIEGE-UNIT2 NO)
	(set-goal SECONDARY-COMBAT-SIEGE-UNIT NO)
	(set-goal SECONDARY-COMBAT-SIEGE-UNIT2 NO)

	(disable-self)
)


#load-if-defined DEATH-MATCH

(defrule
	(not (goal RUSH-CONTROL NO))
